<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:padding="5dp"
    android:layout_marginLeft="1dp"
    android:layout_marginRight="1dp"

    android:background="?attr/actionBarDivider"

    android:id="@+id/llItem"

    >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="1dp"
        android:background="@drawable/edit_salvar"
        android:orientation="vertical"
        android:outlineAmbientShadowColor="#000"
        android:padding="0dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/ic_baseline_person_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvCliente"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:fontFamily="monospace"
            android:text="CLIENTE"
            android:textColor="#7E7F84"
            android:textSize="10sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvNomeCliente"
            android:layout_width="148dp"
            android:layout_height="18dp"

            android:layout_marginTop="4dp"

            android:fontFamily="monospace"
            android:text="Roberto Carlos"
            android:textColor="#181D1E"
            android:textSize="15dp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="109dp" />

        <TextView
            android:id="@+id/tvEndereço"
            android:layout_width="41dp"
            android:layout_height="11dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:fontFamily="monospace"
            android:text="EMDEREÇO"
            android:textColor="#7E7F84"
            android:textSize="8sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/tvCliente" />

        <TextView
            android:id="@+id/tvEndereço02"
            android:layout_width="221dp"
            android:layout_height="12dp"
            android:layout_marginTop="8dp"
            android:fontFamily="monospace"
            android:text="Rua das flores Ararangua N 535"
            android:textColor="#262C2D"
            android:textSize="8dp"

            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/tvNomeCliente"
            tools:layout_editor_absoluteX="109dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="89dp"
            android:layout_height="12dp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="8dp"
            android:fontFamily="monospace"
            android:text="Titulos em Aberto"
            android:textColor="#565855"
            android:textSize="8sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/tvEndereço"
            tools:layout_editor_absoluteX="58dp" />

        <TextView
            android:id="@+id/tvHora"
            android:layout_width="50dp"
            android:layout_height="9dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:fontFamily="monospace"
            android:paddingHorizontal="15dp"
            android:text="00"
            android:textColor="#181A17"
            android:textSize="8dp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/textView6"
            app:layout_constraintTop_toBottomOf="@+id/tvEndereço02" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>